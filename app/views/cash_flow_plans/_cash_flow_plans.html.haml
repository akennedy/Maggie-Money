%table.table.table-striped.table-bordered.table-condensed
  %thead
    %tr
      %th Date
      %th Household Income
      %th Budgeted
      %th
      %th
      %th
  %tbody.cfps_body
    - cash_flow_plans.each do |cash_flow_plan|
      %tr
        %td= link_to cash_flow_plan.date, cash_flow_plan_path(cash_flow_plan)
        %td= number_to_currency(cash_flow_plan.household_income)
        %td=# number_to_currency(cash_flow_plan.cash_flow_plan_items.map(&:amount).sum)
        %td
          %a.no-underline{:href => edit_cash_flow_plan_path(cash_flow_plan), :title => 'Edit'}
            %i.icon-pencil
          = link_to 'Edit', edit_cash_flow_plan_path(cash_flow_plan), :title => 'Edit'
        %td
          %a.no-underline{:href => clone_cash_flow_plan_path(cash_flow_plan), :title => 'Clone'}
            %i.icon-repeat
          = link_to 'Clone', clone_cash_flow_plan_path(cash_flow_plan), :title => 'Clone'
        %td
          %a.no-underline{:href => cash_flow_plan_path(cash_flow_plan),:method => :delete, :confirm => "Are You Sure?  This action cannot be undone.", :title => 'Delete'}
            %i.icon-trash
          = link_to 'Delete', cash_flow_plan_path(cash_flow_plan),:method => :delete, :confirm => "Are You Sure?  This action cannot be undone.", :title => 'Delete'
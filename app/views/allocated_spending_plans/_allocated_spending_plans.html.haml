%table.table.table-striped.table-bordered.table-condensed
  %thead
    %tr
      %th Date
      %th Household Income
      %th Budgeted
      %th
      %th
      %th
  %tbody.asps_body
    - allocated_spending_plans.each do |allocated_spending_plan|
      %tr
        %td= link_to allocated_spending_plan.date, allocated_spending_plan_path(allocated_spending_plan)
        %td= number_to_currency(allocated_spending_plan.household_income)
        %td
        %td
          %a.no-underline{:href => edit_allocated_spending_plan_path(allocated_spending_plan), :title => 'Edit'}
            %i.icon-pencil
          = link_to 'Edit', edit_allocated_spending_plan_path(allocated_spending_plan), :title => 'Edit'
        %td
          %a.no-underline{:href => clone_allocated_spending_plan_path(allocated_spending_plan), :title => 'Clone'}
            %i.icon-repeat
          = link_to 'Clone', clone_allocated_spending_plan_path(allocated_spending_plan), :title => 'Clone'
        %td
          %a.no-underline{:href => allocated_spending_plan_path(allocated_spending_plan),:method => :delete, :confirm => "Are You Sure?  This action cannot be undone.", :title => 'Delete'}
            %i.icon-trash
          = link_to 'Delete', allocated_spending_plan_path(allocated_spending_plan),:method => :delete, :confirm => "Are You Sure?  This action cannot be undone.", :title => 'Delete'
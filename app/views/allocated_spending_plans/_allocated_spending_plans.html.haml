%table.zebra-striped
  %thead
    %tr
      %th Date
      %th Household Income
      %th
      %th
      %th
  %tbody
    - allocated_spending_plans.each do |allocated_spending_plan|
      %tr
        %td= link_to allocated_spending_plan.date, allocated_spending_plan_path(allocated_spending_plan)
        %td= number_to_currency(allocated_spending_plan.household_income)
        %td
          %a{:href => edit_allocated_spending_plan_path(allocated_spending_plan), :class => 'ui-icon ui-icon-pencil', :title => 'Edit', :style => 'display:inline-block;'}
          = link_to 'Edit', edit_allocated_spending_plan_path(allocated_spending_plan), :title => 'Edit'
        %td
          %a{:href => clone_allocated_spending_plan_path(allocated_spending_plan), :class => 'ui-icon ui-icon-copy', :title => 'Clone', :style => 'display:inline-block;'}
          = link_to 'Clone', clone_allocated_spending_plan_path(allocated_spending_plan), :title => 'Clone'
        %td
          %a{:href => allocated_spending_plan_path(allocated_spending_plan),:method => :delete, :confirm => "Are You Sure?  This action cannot be undone.", :class => 'ui-icon ui-icon-trash', :title => 'Delete', :style => 'display:inline-block;'}
          = link_to 'Delete', allocated_spending_plan_path(allocated_spending_plan),:method => :delete, :confirm => "Are You Sure?  This action cannot be undone.", :title => 'Delete'
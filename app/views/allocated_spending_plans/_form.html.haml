= form_for @allocated_spending_plan do |f|
  = f.hidden_field :cash_flow_plan_id, :value => @allocated_spending_plan.try(:cash_flow_plan_id)
  .row
    .span11
      = render "shared/error_messages", :target => @allocated_spending_plan
  .row
    .span11
      = render 'form_header', :f => f
  .row
    .span11
      = render 'form_content', :f => f
  .row
    .span11
      = f.text_area :notes, :placeholder => 'Add some notes here...', :style => 'width:100%;height:100px;'
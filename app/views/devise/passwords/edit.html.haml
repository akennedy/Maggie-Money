.well
  %h3 Change your password
  %hr
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    = render "shared/error_messages", :target => resource
    = f.hidden_field :reset_password_token
    = f.password_field :password, :class => 'xlarge', :placeholder => 'Password...'
    %br
    = f.password_field :password_confirmation, :class => 'xlarge', :placeholder => 'Password confirmation...'

    .form-actions
      %button.btn.btn-primary{:type => 'submit'} Change my password
      = link_to 'Cancel', :back, :class => 'btn'

  %p
    = render 'devise/shared/links'
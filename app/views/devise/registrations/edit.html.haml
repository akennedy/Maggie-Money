.content
  .hero-unit
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
      = render "shared/error_messages", :target => resource
      .form-stacked
        %fieldset
          %legend
            Edit
            = resource_name.to_s.humanize
          .clearfix
            = f.label :email
            %div.input
              = f.email_field :email, :class => 'xlarge'
          .clearfix
            = f.label :password
            .input
              = f.password_field :password, :class => 'xlarge'
              %span.help-inline (leave blank if you don't want to change it)

          .clearfix
            = f.label :password_confirmation
            .input
              = f.password_field :password_confirmation, :class => 'xlarge'

          .clearfix
            = f.label :current_password
            .input
              = f.password_field :current_password, :class => 'xlarge'
              %span.help-inline (we need your current password to confirm your changes)

          .actions
            = f.submit "Update", :class => 'btn primary'
            = link_to "Back", :back, :class => 'btn'

          %p
            Unhappy?
            = link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete

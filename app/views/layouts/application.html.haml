!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %title Maggie Money
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = csrf_meta_tag
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    :plain
      <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
      <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a{:class => 'btn btn-navbar', :'data-toggle' => 'collapse', :'data-target' => '.nav-collapse'}
            %span{:class => 'icon-bar'}
            %span{:class => 'icon-bar'}
            %span{:class => 'icon-bar'}
          %a.brand{:href=> root_path}Maggie Money
          .nav-collapse
            -if current_user
              %ul.nav
                %li
                  %a{:href => dashboard_path}Dashboard
                %li.dropdown
                  %a.dropdown-toggle{:'data-toggle' => "dropdown", :href => "#"}
                    Worksheets
                    %b{:class => "caret"}
                  %ul.dropdown-menu
                    %li
                      %a{:href => cash_flow_plans_path}Cash Flow Plans
                    %li
                      %a{:href => allocated_spending_plans_path}Allocated Spending Plans
              %ul.nav.pull-right
                %li.dropdown
                  %a.dropdown-toggle{:'data-toggle' => "dropdown", :href => "#"}
                    = current_user.email
                    %b{:class => "caret"}
                  %ul.dropdown-menu
                    %li
                      = link_to 'My Account', edit_user_registration_path
                    %li
                      = link_to 'Preferences', 'javascript:void(0)'
                    %li.divider
                    %li
                      %a{:href => sign_out_path, :method => :delete}Logout
            - unless current_user
              = yield :sign_in

    .container{:style => 'margin-top: 60px;'}
      - flash.each do |key, value|
        .alert.fade.in{:class => alert_class(key)}
          %a.close{:'data-dismiss' => "alert"}x
          %strong
            = alert_leader(key)
          = value

      = yield
      %hr
      %footer
        %p &copy; Maggie Money 2011

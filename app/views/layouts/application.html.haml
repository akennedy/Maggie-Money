!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %title Maggie Money
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = csrf_meta_tag
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    :plain
      <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
      <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->
      <style type="text/css">
        body {
          padding-top: 60px;
        }
      </style>
  %body
    .topbar{:'data-dropdown' => "dropdown"}
      .fill
        .container
          %a.brand{:href=> root_path}Maggie Money
          -if current_user
            %ul.nav
              %li
                %a{:href => dashboard_path}Dashboard
              %li.dropdown
                %a.dropdown-toggle{:href => "javascript:void(0)"}Worksheets
                %ul.dropdown-menu
                  %li
                    %a{:href => cash_flow_plans_path}Cash Flow Plans
                  %li
                    %a{:href => allocated_spending_plans_path}Allocated Spending Plans
            %ul.nav.secondary-nav
              %li.dropdown
                %a.dropdown-toggle{:href => "javascript:void(0)"}= current_user.email
                %ul.dropdown-menu
                  %li
                    = link_to 'My Account', edit_user_registration_path
                  %li
                    = link_to 'Preferences', 'javascript:void(0)'
                  %li.divider
                  %li
                    %a{:href => sign_out_path, :method => :delete}Logout
          -unless current_user
            = yield :sign_in

    .container
    .container
      - flash.each do |key, value|
        .alert-message.fade.in{:class => "#{key == :notice ? :info : key}", "data-alert" => "alert"}
          %a.close{:href => "#"}x
          %p= value

      = yield
      %footer
        %p &copy; Maggie Money 2011

.subnav
  %table.table
    %thead
      %tr
        %td{:width => '40%'}
          .pull-left
            %div.input-prepend{:style => 'width: 160px;'}
              %span.add-on $
              = f.number_field :balance, :placeholder => 'Balance', :style => 'width:120px;', :class => 'balance', :autocomplete => :off
          .pull-right
            = f.number_field :date, :class => 'datepicker', :placeholder => 'yyyy-mm-dd', :style => 'width:120px;', :value => @breakdown_of_saving.date
        %td.center{:width => '30%'}
          %input.breakdown_of_saving_remaining{:disabled => 'disabled', :value => '$0.00 left', :style => 'width:120px;text-align:center;', :class => 'remaining'}
        %td{:width => '30%'}
          .pull-right
            = link_to 'Cancel', root_path, :class => "btn"
            = f.submit "Save", :class => "btn btn-success"
            = f.submit "Finish", :class => "btn btn-primary"
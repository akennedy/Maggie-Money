- content_for :sign_in do
  =form_tag user_session_path, :class => "pull-right" do
    =text_field_tag "user[email]", nil, :class => "input-small", :placeholder => "email"
    =password_field_tag "user[password]", nil, :class => "input-small", :placeholder => "password"
    %button.btn{:type => "submit"}Sign In
  
.content
  .hero-unit
    %h1 Welcome to Maggie Money!
    %p Why is there so much month left at the end of the money?
    %br
    - if current_user
      %p
        %a{:class => "btn info large", :href => dashboard_path} Dashboard &raquo;
        %a{:class => "btn primary large", :href => new_cash_flow_plan_path} Get Started &raquo;
    - else
      %p
        %a{:class => "btn primary large", :href => new_user_registration_path} Sign Up &raquo;
